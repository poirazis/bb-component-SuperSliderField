{
  "type": "component",
  "metadata": {
    "svelteMajor": 5
  },
  "schema": {
    "name": "bb-component-SuperSliderField",
    "friendlyName": "Super Field - Slider",
    "description": "A Slider Input Field with Super Powers !",
    "icon": "Properties",
    "styles": ["size", "padding"],
    "settings": [
      {
        "type": "field/number",
        "key": "field",
        "label": "Field",
        "required": true
      },
      {
        "type": "text",
        "key": "label",
        "label": "Label"
      },
      {
        "type": "number",
        "key": "defaultValue",
        "label": "Default Value"
      },
      {
        "type": "select",
        "key": "sliderType",
        "label": "Slider Type",
        "options": [
          {
            "label": "Standard",
            "value": "standard"
          },
          {
            "label": "Ticks",
            "value": "ticks"
          },
          {
            "label": "Ramp",
            "value": "ramp"
          }
        ],
        "defaultValue": "standard"
      },
      {
        "type": "number",
        "key": "tickSize",
        "label": "Tick Size",
        "info": "Will default to step size if not set",
        "dependsOn": {
          "setting": "sliderType",
          "value": "ticks"
        }
      },
      {
        "type": "boolean",
        "key": "tickLabels",
        "label": "Tick Labels",
        "dependsOn": {
          "setting": "sliderType",
          "value": "ticks"
        }
      },
      {
        "type": "number",
        "key": "min",
        "label": "Min Value",
        "defaultValue": 0
      },
      {
        "type": "number",
        "key": "max",
        "label": "Max Value",
        "defaultValue": 100
      },
      {
        "type": "number",
        "key": "step",
        "label": "Step",
        "defaultValue": 10
      },
      {
        "type": "boolean",
        "key": "disabled",
        "label": "Disabled"
      },
      {
        "type": "boolean",
        "key": "filled",
        "label": "Filled"
      },
      {
        "tag": "style",
        "type": "boolean",
        "key": "invisible",
        "label": "Invisible",
        "defaultValue": false
      }
    ]
  }
}
